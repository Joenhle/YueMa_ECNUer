<!--index.wxml-->

<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">身份验证</view>
</cu-custom>
<view class="container">
  <view class="{{show_camera?'hide':'show'}} padding-xl radius shadow-blur bg-red margin-top bg-img" style="height:300px;margin-top:-1px;margin-bottom:-299px;width:100%;background-image:url({{src ==''?'https://7869-xiaohuang-evwg7-1301134245.tcb.qcloud.la/%E8%AF%81%E4%BB%B6%E7%A4%BA%E4%BE%8B.jpg?sign=641abfc460fa865f1eb42f8927ba641c&t=1582106832' : src}});">
    <view class="{{src==''?'show':'hide'}} font_shili">示例</view>
  </view>

  <camera class="{{show_camera?'show':'hide'}}" device-position="{{device_position}}" flash="off" binderror="error" style="width: 100%; height: 300px;margin-bottom:-300px"></camera>
  <view scroll-y class="scrollPage">
    <view class='nav-list'>
      <view class="nav-li bg-{{item.color}} {{item.leibie=='camera'? show_register_and_login?'show':'hide' :show_cansole_and_accurate?'show':'hide'}}" bindtap="click_of_{{item.leibie}}" hover-class='none' data-leibie="{{item.title}}" wx:for="{{elements}}" wx:key>
        <view class="nav-title">{{item.title}}</view>
        <view class="nav-name">{{item.name}}</view>
        <text class='cuIcon-{{item.icon}}'></text>
      </view>
    </view>
    <view class='cu-tabbar-height'></view>
  </view>

  <view class="padding" style="width:100%">
    <view class="cu-steps">
      <view class="cu-item {{index>num?'':'text-blue'}}" wx:for="{{numList}}" wx:key>
        <text class="num" data-index="{{index + 1}}"></text> {{item.name}}
      </view>
    </view>
  </view>
</view>