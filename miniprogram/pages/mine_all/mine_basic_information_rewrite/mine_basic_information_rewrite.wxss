.my{
  margin: 15rpx 0 0 0;
  border-top: solid 1px #ebebeb;
  border-bottom: solid 2px #ebebeb;
}
.my .my-item{
  width: 750rpx;
  background: #ffffff;
  padding: 0
}
.my .my-item .myitem-icon{
  flex: 1;
}
.my .my-item .myitem-icon image{
  width: 45rpx;
  height: 45rpx;
  padding: 37.5rpx 0;
}
.my .my-item .myitem-name{
  flex: 5;
  text-align: left;
  font-size: 34rpx;
  color: #160f0f;
  line-height: 60rpx;
  padding: 30rpx 0;
  border-bottom: solid 1px #ebebeb;
}
.my .my-item:last-child .myitem-name{
  border-bottom: none;
}

.my .my-item .myitem-nameHL {
  flex: 5;
  text-align: left;
  font-size: 34rpx;
  color: #0a0909;
  line-height: 60rpx;
  padding: 30rpx 0;
  border-bottom: solid 1px #f8f3f3;
}

.information{
  height: 113rpx;
  width:100%;
  position: fixed;
  bottom:0;
  z-index:1;
}
