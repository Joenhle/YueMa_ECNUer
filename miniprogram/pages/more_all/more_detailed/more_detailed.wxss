/*1.头像时间和提示图片*/
.container-content {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding:14px;
  background-color: var(--white);
  margin: 0 auto;
  border-radius: 10px;
  
}
.container-line{
  width: 100%;
  height: 3rpx;
  background-color: rgba(248, 60, 132, 0.89);
}
.user-info {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}
.user-head {
  margin-left: 5px;
  width: 40px;
  height: 40px;
  line-height: 40px;
  border-radius: 50%;
}
.user-name-time {
  display: flex;
  flex-direction: column;
  width: 70%;
  margin-top: 5px;
  margin-left: 10px;
}
.user-name {
  font-size: 15px;
  color: rgb(69, 180, 245);
  font-weight: bold;
}
.user-publish-time {
  font-size: 15px;
  color: rgb(238, 45, 119);
}
.user-inform{
  margin-right: 10px;
  width:90rpx;
  height:90rpx; 
}

/*2.包含的内容*/
.content {
  display: flex;
  flex-direction: column;
  margin-right: 5%;
  margin-top: 2px;
}
.content-scroll {
  display: flex;
  flex-direction: row;
  width: 100%;
}
.content-text {
  font-size: 32rpx;
  
  margin-left: 10px;
  word-break: break-word;  /*强制英文单词自动换行*/
}
.content-img {
  width: 31%;
  height: 200rpx;
  margin-left: 8rpx;
  margin-top: 8rpx;
  background-color: #999;
}
/*3.删除图标*/
.user-delete{
  margin-left: 90%;
  width:60rpx;
  height:60rpx; 
}